<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/solutiontv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/resulttv"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"

        android:layout_marginBottom="16dp"
        android:textAlignment="textEnd"
        android:textColor="@color/black"
        android:textSize="32dp" />
//this is textview is for taking input
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/resulttv"
    android:text="0"
    android:textSize="64dp"
    android:textAlignment="textEnd"
    android:textColor="@color/black"
    android:layout_margin="16dp"
    android:layout_above="@id/buttonlayout"

    />
    //this Textview is showing result


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/purple_500"
        android:layout_alignParentBottom="true"
        android:id="@+id/buttonlayout">
        //this linearlayout is for background which is im using blue background
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        >
//this linerlayout using for one row button
        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonc"
            style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_margin="12dp"
            android:text="C"
            android:textColor="@color/white"
            android:textSize="32sp"
            app:cornerRadius="32dp" />

        <com.google.android.material.button.MaterialButton
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:text="("
            android:textSize="32dp"
            android:id="@+id/button_openbracket"
            android:layout_margin="12dp"
            android:textColor="@color/white"
            style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
            app:cornerRadius="32dp" />

        <com.google.android.material.button.MaterialButton
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:text=")"
            android:textSize="32dp"
            android:id="@+id/button_closebracket"
            android:layout_margin="12dp"
            android:textColor="@color/white"
            style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
            app:cornerRadius="32dp" />

        <com.google.android.material.button.MaterialButton
            style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_margin="12dp"
            android:backgroundTint="@android:color/holo_orange_dark"
            android:gravity="center"
            android:text="/"
            android:id="@+id/button_div"
            android:textColor="@color/white"
            android:textSize="32dp"
            app:cornerRadius="32dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        >
        <com.google.android.material.button.MaterialButton
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:text="7"
            android:textSize="32dp"
            android:layout_margin="12dp"
            android:id="@+id/button_7"
            android:textColor="@color/white"
            style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
            app:cornerRadius="32dp" />

        <com.google.android.material.button.MaterialButton
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:text="8"
            android:textSize="32dp"
            android:layout_margin="12dp"
            android:textColor="@color/white"
            style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
            app:cornerRadius="32dp"
            android:id="@+id/button_8"/>

        <com.google.android.material.button.MaterialButton
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:text="9"
            android:id="@+id/button_9"
            android:textSize="32dp"
            android:layout_margin="12dp"
            android:textColor="@color/white"
            style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
            app:cornerRadius="32dp" />

        <com.google.android.material.button.MaterialButton
            style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_margin="12dp"
            android:backgroundTint="@android:color/holo_orange_dark"
            android:gravity="center"
            android:text="*"
            android:id="@+id/bitton_ast"
            android:textColor="@color/white"
            android:textSize="32dp"
            app:cornerRadius="32dp" />
    </LinearLayout> <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        >
        <com.google.android.material.button.MaterialButton
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:text="@string/_4"
            android:id="@+id/button_4"
            android:textSize="32dp"
            android:layout_margin="12dp"
            android:textColor="@color/white"
            style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
            app:cornerRadius="32dp" />

        <com.google.android.material.button.MaterialButton
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:text="5"
            android:textSize="32dp"
            android:layout_margin="12dp"
            android:textColor="@color/white"
            android:id="@+id/button_5"
            style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
            app:cornerRadius="32dp" />

        <com.google.android.material.button.MaterialButton
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:text="6"
            android:id="@+id/button_6"
            android:textSize="32dp"
            android:layout_margin="12dp"
            android:textColor="@color/white"
            style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
            app:cornerRadius="32dp" />

        <com.google.android.material.button.MaterialButton
            style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_margin="12dp"
            android:backgroundTint="@android:color/holo_orange_dark"
            android:gravity="center"
            android:text="-"
            android:id="@+id/button_min"
            android:textColor="@color/white"
            android:textSize="32dp"
            app:cornerRadius="32dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        >
        <com.google.android.material.button.MaterialButton
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:text="1"
            android:id="@+id/button_1"
            android:textSize="32sp"
            android:layout_margin="12dp"
            android:textColor="@color/white"
            style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
            app:cornerRadius="32dp" />

        <com.google.android.material.button.MaterialButton
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:text="2"
            android:textSize="32dp"
            android:layout_margin="12dp"
            android:textColor="@color/white"
            style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
            app:cornerRadius="32dp"
            android:id="@+id/button2"/>

        <com.google.android.material.button.MaterialButton
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:text="3"
            android:id="@+id/button_3"
            android:textSize="32dp"
            android:layout_margin="12dp"
            android:textColor="@color/white"
            style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
            app:cornerRadius="32dp" />

        <com.google.android.material.button.MaterialButton
            style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_margin="12dp"
            android:backgroundTint="@android:color/holo_orange_dark"
            android:gravity="center"
            android:text="+"
            android:id="@+id/button_plus"
            android:textColor="@color/white"
            android:textSize="32dp"
            app:cornerRadius="32dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        >

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonac"
            style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_margin="12dp"
            android:text="AC"
            android:textColor="@color/white"
            android:textSize="20dp"
            app:cornerRadius="32dp" />

        <com.google.android.material.button.MaterialButton
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:text="0"
            android:id="@+id/button_zero"
            android:textSize="32dp"
            android:layout_margin="12dp"
            android:textColor="@color/white"
            style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
            app:cornerRadius="32dp" />

        <com.google.android.material.button.MaterialButton
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:text="."
            android:id="@+id/button_dot"
            android:textSize="32dp"
            android:layout_margin="12dp"
            android:textColor="@color/white"
            style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
            app:cornerRadius="32dp" />

        <com.google.android.material.button.MaterialButton
            style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_margin="12dp"
            android:backgroundTint="@android:color/holo_orange_dark"
            android:gravity="center"
            android:text="="
            android:id="@+id/button_eq"
            android:textColor="@color/white"
            android:textSize="32dp"
            app:cornerRadius="32dp" />
    </LinearLayout>
    </LinearLayout>

</RelativeLayout>